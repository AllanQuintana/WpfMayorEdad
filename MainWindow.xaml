        <Label Content="Mayor de Edad" HorizontalAlignment="Left" Height="51" Margin="0,10,0,0" VerticalAlignment="Top" Width="790" HorizontalContentAlignment="Center" FontSize="28"/>
        <Label Content="Ingrese su edad" HorizontalAlignment="Left" Margin="87,127,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtEdad" HorizontalAlignment="Left" Height="22" Margin="194,131,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="51"/>
        <Label x:Name="lblResultado" Content="" HorizontalAlignment="Left" Height="26" Margin="93,183,0,0" VerticalAlignment="Top" Width="158"/>

    </Grid>
</Window>
