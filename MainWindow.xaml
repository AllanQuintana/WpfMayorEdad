<Window x:Class="WpMayorEdad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpMayorEdad"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="btnLimpiar">
        <Button Content="Limpiar" HorizontalAlignment="Left" Margin="460,158,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button x:Name="btnSalir" Content="Salir" HorizontalAlignment="Left" Margin="459,183,0,0" VerticalAlignment="Top" Click="btnSalir_Click"/>
